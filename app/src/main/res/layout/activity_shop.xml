<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_olive"
    tools:context=".ShopActivity">

    <TextView
        android:id="@+id/text_coin_shop"
        android:layout_width="101dp"
        android:layout_height="33dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="-6dp"
        android:layout_marginRight="-6dp"
        android:layout_toStartOf="@+id/img_coin2"
        android:layout_toLeftOf="@+id/img_coin2"
        android:gravity="right"
        android:text="0"
        android:textColor="@color/dark_brown"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/img_coin"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_coin2"
        android:layout_width="46dp"
        android:layout_height="51dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_coin" />

    <Button
        android:id="@+id/btn_back_shop"
        android:layout_width="69dp"
        android:layout_height="69dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/ic_back"
        app:backgroundTint="@color/grey" />

    <TableLayout
        android:id="@+id/table"
        android:layout_width="373dp"
        android:layout_height="577dp"
        android:layout_below="@+id/btn_back_shop"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:scrollbarAlwaysDrawVerticalTrack="true" />

    <TextView
        android:id="@+id/text_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="19dp"
        android:layout_toEndOf="@+id/btn_back_shop"
        android:layout_toRightOf="@+id/btn_back_shop"
        android:text="Магазин"
        android:textColor="@color/dark_brown"
        android:textSize="40sp" />

</RelativeLayout>