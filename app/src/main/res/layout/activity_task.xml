<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_olive"
    tools:context=".TaskActivity">

    <ImageView
        android:id="@+id/img_grass_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-25dp"
        android:layout_marginLeft="-25dp"
        android:layout_marginBottom="-15dp"
        app:srcCompat="@drawable/ic_grass" />

    <ImageView
        android:id="@+id/img_grass_task2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-30dp"
        android:layout_marginRight="-30dp"
        android:layout_marginBottom="-13dp"
        app:srcCompat="@drawable/ic_grass" />

    <TextView
        android:id="@+id/txt_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="21dp"
        android:layout_toEndOf="@+id/btn_back_task"
        android:layout_toRightOf="@+id/btn_back_task"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/dark_brown"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btn_back_task"
        android:layout_width="69dp"
        android:layout_height="69dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_back"
        app:backgroundTint="@color/grey" />

    <LinearLayout
        android:id="@+id/progress_layout"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_condition"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/task1"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:background="@drawable/style_points">

        </TextView>

        <TextView
            android:id="@+id/task2"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:background="@drawable/style_points"></TextView>

        <TextView
            android:id="@+id/task3"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:background="@drawable/style_points"></TextView>

        <TextView
            android:id="@+id/task4"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:background="@drawable/style_points"></TextView>

        <TextView
            android:id="@+id/task5"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:background="@drawable/style_points"></TextView>

        <TextView
            android:id="@+id/task6"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:background="@drawable/style_points"></TextView>

        <TextView
            android:id="@+id/task7"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:background="@drawable/style_points"></TextView>

        <TextView
            android:id="@+id/task8"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:background="@drawable/style_points"></TextView>

        <TextView
            android:id="@+id/task9"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:background="@drawable/style_points"></TextView>

        <TextView
            android:id="@+id/task10"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:background="@drawable/style_points"></TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/task_layout"
        android:layout_width="235dp"
        android:layout_height="227dp"
        android:layout_below="@+id/progress_layout"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="139dp"
        android:layout_marginRight="139dp"
        android:layout_marginBottom="366dp"
        android:orientation="horizontal"
        android:scrollbarAlwaysDrawVerticalTrack="true">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="237dp"
        android:layout_height="61dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="137dp"
        android:layout_marginRight="137dp"
        android:layout_marginBottom="282dp"
        android:orientation="horizontal"></LinearLayout>

    <ImageView
        android:id="@+id/fox_task"
        android:layout_width="138dp"
        android:layout_height="147dp"
        android:layout_below="@+id/txt_condition"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginRight="-1dp"
        app:srcCompat="@drawable/ic_tricky_fox" />

</RelativeLayout>